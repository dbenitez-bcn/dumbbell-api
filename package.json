{
  "name": "dumbbell",
  "version": "1.0.0",
  "description": "",
  "main": "dist/api/index.js",
  "scripts": {
    "dev": "APP_ENV=dev tsc-watch --onSuccess \"node ./dist/api/index.js\"",
    "build": "tsc",
    "docker": "docker build -t api-dumbbell .",
    "test:unit": "APP_ENV=test jest --coverage --verbose --testPathIgnorePatterns=e2e",
    "test:e2e": "APP_ENV=test jest --coverage --testPathPattern=e2e --detectOpenHandles --forceExit",
    "alpha:up": "docker-compose -f docker-compose-alpha.yml up",
    "alpha:down": "docker-compose -f docker-compose-alpha.yml down --remove-orphans",
    "db:start": "docker-compose -f docker-compose-dev.yml up",
    "db:stop": "docker-compose -f docker-compose-dev.yml down --remove-orphans",
    "db:drop": "rm -R src/api/database/data/",
    "db:migration:run": "npx ts-node ./node_modules/.bin/typeorm migration:run",
    "db:migration:new": "npx ts-node ./node_modules/.bin/typeorm migration:generate -n migration"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/node": "^13.1.1",
    "@types/supertest": "^2.0.8",
    "@types/swagger-ui-express": "^4.1.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^5.0.0-alpha.7",
    "supertest": "^4.0.2",
    "swagger-ui-express": "^4.1.2",
    "tsc-watch": "^4.0.0",
    "typeorm": "^0.2.22",
    "typescript": "^3.7.4"
  },
  "devDependencies": {
    "@types/jest": "^24.0.25",
    "@types/pg": "^7.14.0",
    "jest": "^24.9.0",
    "pg": "^7.17.0",
    "ts-jest": "^24.2.0"
  }
}
